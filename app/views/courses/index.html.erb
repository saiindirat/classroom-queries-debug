<h1>
  List of all courses
</h1>

<hr>

<!-- Create Course Form -->
<form action="/insert_course" method="post">
  <div>
    <label for="title_box">Title</label>
    <input type="text" id="title_box" name="query_title">
  </div>

  <div>
    <label for="term_box">Term offered</label>
    <input type="text" id="term_box" name="query_term">
  </div>

  <div>
    <label for="dept_box">Department ID</label>
    <input type="text" id="dept_box" name="query_department_id">
  </div>

  <div>
    <button>Create course</button>
  </div>
</form>

<hr>

<!-- Courses Table -->
<table class="table" border="1">
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Term</th>
    <th>Department</th>
    <th></th>
  </tr>

  <% @courses.each do |course| %>
    <tr>
      <td><%= course.id %></td>
      <td><%= course.title %></td>
      <td><%= course.term_offered %></td>
      <td>
        <% department = Department.where({ :id => course.department_id }).at(0) %>
        <% if department.present? %>
          <a href="/departments/<%= department.id %>"><%= department.name %></a>
        <% else %>
          <em>Unknown department</em>
        <% end %>
      </td>
      <td>
        <a href="/courses/<%= course.id %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>

<hr>
